<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
	<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">

	    <TextView android:text="@string/imageWidth" android:labelFor="@+id/imageWidth" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		<EditText android:id="@+id/imageWidth" android:inputType="numberDecimal" android:layout_width="fill_parent" android:layout_height="wrap_content">
			<requestFocus />
		</EditText>

		<TextView android:text="@string/imageHeight" android:labelFor="@+id/imageHeight" android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<EditText android:id="@+id/imageHeight" android:inputType="numberDecimal" android:layout_width="fill_parent" android:layout_height="wrap_content"></EditText>

		<TextView android:text="@string/focalLength" android:labelFor="@+id/focalLength" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<EditText android:id="@+id/focalLength" android:inputType="number" android:layout_width="fill_parent" android:layout_height="wrap_content"></EditText>

		<TextView android:text="@string/aperture" android:labelFor="@+id/aperture" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<EditText android:id="@+id/aperture" android:inputType="numberDecimal" android:layout_width="fill_parent" android:layout_height="wrap_content"></EditText>

		<TextView android:text="@string/distance" android:labelFor="@+id/distance" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<EditText android:id="@+id/distance" android:inputType="numberDecimal" android:layout_height="wrap_content" android:layout_width="fill_parent"></EditText>

		<TextView android:text="@string/time" android:labelFor="@+id/time" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<EditText android:id="@+id/time" android:inputType="numberDecimal" android:layout_width="fill_parent" android:layout_height="wrap_content"></EditText>

		<TextView android:text="@string/greyFilter" android:labelFor="@+id/greyFilter" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<EditText android:id="@+id/greyFilter" android:inputType="number" android:layout_width="fill_parent" android:layout_height="wrap_content"></EditText>
	</LinearLayout>
</ScrollView>
